<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/music_palyer_machine_bg">

    <ImageView
        android:id="@+id/music_player_machine_album"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:src="@drawable/music_bar_default_album_vector"
        />
    <Button
        android:id="@+id/music_player_machine_btn_to_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:background="@drawable/edittext_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_player_machine_album"
        app:layout_constraintBottom_toTopOf="@+id/music_player_current_duration"
        app:layout_constraintRight_toLeftOf="@+id/music_player_machine_btn_to_comment"
        />
    <Button
        android:id="@+id/music_player_machine_btn_to_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:background="@drawable/edittext_border"
        app:layout_constraintLeft_toRightOf="@+id/music_player_machine_btn_to_collect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_player_machine_album"
        app:layout_constraintBottom_toTopOf="@+id/music_player_current_duration"
        />
    <TextView
        android:id="@+id/music_player_machine_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:00:00"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/music_player_machine_seek_bar"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/music_player_current_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="03:00:00"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/music_player_machine_seek_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <SeekBar
        android:id="@+id/music_player_machine_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/machine_musicPlayerBar"
        android:layout_marginBottom="5dp"
        />
    <FrameLayout
        android:id="@+id/machine_musicPlayerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>